bug-reports: "https://git.frama-c.com/pub/frama-clang/-/issues"
depends: [
  "dune" {>= "3.13" & != "3.13.0"}
  "frama-c" {>= "31.0~" & < "32.0~"}
  "zarith" {>= "1.5"}
  "camlp5"
  "camlp-streams"
  "conf-llvm" {>= "11.0.0" & < "20"}
  "conf-libclang" {>= "11.0.0" & < "20"}
  "conf-clang"
  "conf-cmake"
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
