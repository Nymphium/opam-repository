maintainer: "https://github.com/ocaml/opam-repository/issues"
homepage: "https://www.libvips.org/"
bug-reports: "https://github.com/ocaml/opam-repository/issues"
authors: "vips dev team"
license: "LGPL-2.1-or-later"
build: ["pkg-config" "--exists" "vips"]
depends: [
  "conf-pkg-config" {build}
]
depexts: [
  ["libvips-dev"] {os-family = "debian"}
  ["libvips-dev"] {os-family = "ubuntu"}
  ["vips-devel"] {os-family = "fedora"}
  ["libvips-devel"] {os-family = "suse" | os-family = "opensuse"}
  ["vips-dev"] {os-distribution = "alpine"}
  ["vips"] {os-distribution = "nixos"}
  ["libvips"] {os-distribution = "arch"}
  ["vips"] {os = "freebsd"}
  ["vips"] {os = "macos" & os-distribution = "homebrew"}
]
synopsis: "Virtual package relying on libvips"
description:
  "This package can only install if the vips library is installed on the system."
flags: conf
